
@{
    ViewBag.Title = "Index";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Index</h2>
    <h4>@ViewBag.Message</h4>
    <h4>There are @ViewBag.EmployeeCount employees in the list.</h4>
   <table>
       <thead>
           <tr>
               <th>Id</th>
               <th>Name</th>
               <th>Age</th>
           </tr>
       </thead>
       <tbody>
           @foreach(var item in ViewBag.Employees)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Salary</td>
                </tr>
            }
        </tbody>
   </table>

   <hr/>

  <ul>
        @foreach (var item in ViewBag.Employees)
        {
            <li>@item.Name</li>
        }
    </ul>

