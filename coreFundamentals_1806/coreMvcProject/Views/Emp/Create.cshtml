@model coreMvcProject.Models.Employee;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post" asp-action="Create">
    <div class="mb-3">
        <label for="name" class="form-label">Employee Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Employee Name">
    </div>
    <div class="mb-3">
        <label for="salary" class="form-label">Employee Salary</label>
        <input type="text" asp-for="Salary" class="form-control" placeholder="Employee Salary" />
    </div>
    <button type="submit" class="btn btn-outline-success">Create</button>
</form>

