
@model IEnumerable<coreMvcProject.Models.Employee>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-outline-secondary" asp-action="Create">Create New Employee</a>

<h1>List of Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>
                    <a asp-controller="Emp" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Emp" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-controller="Emp" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

