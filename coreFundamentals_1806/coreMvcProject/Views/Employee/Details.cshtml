
@{
    ViewData["Title"] = "Details";
}

<h2>Demonstrating View Data</h2>

<h3>@ViewData["Message"]</h3>
<h5>There are @ViewData["EmployeeCount"] employees in list.</h5>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["Employees"] as List<Employee>)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Salary</td>
            </tr>
        }
    </tbody>
</table>


<hr />

<a asp-controller="Employee" asp-action="Check">Check Me</a>


